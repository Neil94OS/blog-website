<!DOCTYPE html>
<html>
<%- include('../partials/head'); %>
<body>
<%- include('../partials/header'); %>
<div class="app-main">
    <form action="/admin/delete/<%=  blog.blogid  %>" method="post">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header"><h3 class="text-center font-weight-light my-4">Delete Blog ID: <%= blog.blogid %></h3></div>
                        <div class="card-header"><h3 class="text-center font-weight-light my-4">Title: <%= blog.title %></h3></div>

                        <div class="card-body">
                            <div class="form-group">
                                <input type="submit" value="Delete" class="btn btn-default btn-outline-danger" />
                                <a href="/displayBlogs" class="btn btn-outline-dark cancel">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
</body>
<%- include('../partials/footer'); %>
</html>